@model Shop.Web.Models.ProductDTO

@{
    ViewData["Title"] = "ProductCreate";
}
<link rel="stylesheet" href="~/css/FormStyle.css" asp-append-version="true" />

    <h1 >Удаление товара</h1>
    <hr />
<form asp-action="ProductDelete" class="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ProductId" hidden />
    <p class="title">Удаление</p>
    <div class="flex">

        <label asp-for="ProductName">
            <input disabled asp-for="ProductName" class="input" type="text" placeholder="" required="">

            <span asp-validation-for="ProductName">Название</span>
        </label>

        <label asp-for="ProductPrice">
            <input disabled asp-for="ProductPrice" class="input" type="number" placeholder="" required="">
            <span asp-validation-for="ProductPrice">Цена</span>
        </label>
    </div>

    <label asp-for="CategoryName">
        <input disabled asp-for="CategoryName" class="input" type="text" placeholder="" required="">
        <span asp-validation-for="CategoryName">Категория</span>
    </label>

    <label asp-for="ProductImg">
        <input disabled asp-for="ProductImg" class="input" type="url" placeholder="" required="">
        <span asp-validation-for="ProductImg">Адрес картинки</span>
    </label>
    <label asp-for="ProductDescription">
        <textarea disabled asp-for="ProductDescription" class="input" placeholder="" required=""></textarea>
        <span asp-validation-for="ProductDescription">Описание</span>
    </label>
    <div class="flex">
        <button class="submit">Удалить</button>
        <a asp-action="ProductIndex" class="submit">Назад</a>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
